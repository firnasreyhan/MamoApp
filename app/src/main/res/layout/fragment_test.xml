<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.TestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink5">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:fontFamily="@font/montserrat_bold"
            android:lineSpacingExtra="8dp"
            android:text="Yuk jawab beberapa pertanyaan berikut untuk menemukan gejala kanker payudara sedini mungkin!"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:fontFamily="@font/montserrat_medium"
            android:lineSpacingExtra="4dp"
            android:text="Dengan melanjutkan berarti Anda telah setuju dengan Ketentuan Layanan dan Kebijakan Privasi MamoApp"
            android:textColor="@color/white"
            android:textSize="9sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButtonTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14sp"
            android:text="Lanjut"
            android:textColor="@color/pink6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="-16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_doctor_test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>